<style>
	.pie-pagina {
		margin-top: auto;
		width: 100%;
		background-color: #8B4513;
		position: relative;
	}

	.pie-pagina .grupo-1 {
		align-items: center;
		width: 100%;
		max-width: 1420px;
		margin: auto;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-gap: 50px;
		padding: 45px 0px;
		justify-items: center;
		text-align: center;
	}

	.pie-pagina .grupo-1 .box {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.pie-pagina .grupo-1 .box p {
		margin-bottom: 7px;
		margin-left: 0px;
		text-align: center;
		color: #fff;
		font-family: 'Akshar';
	}

	.pie-pagina .grupo-1 .box h2{
		color: #F6C496;
		margin-bottom: 7px;
		margin-left: 0px;
		font-family: 'Roboto';
		text-align: center;

	}
	.pie-pagina .grupo-1 .box figure img {
		max-width: 200px;
		height: auto;
		display: flex;
		margin-right: 0;
	}


	.pie-pagina .grupo-1 .box .red-social {
		display: flex;
		justify-content: center;
		margin-top: 10px;
	}

	.pie-pagina .grupo-1 .box .red-social a {
		font-size: 36px;
		text-decoration: none;
		width: 45px;
		height: 45px;
		line-height: 45px;
		color: #0f0b07;
		margin: 0 10px;
		background-color: #F6C496;
		text-align: center;
		border-radius: 50%;
		transition: all 300ms ease;
	}

	.pie-pagina .grupo-1 .box .red-social a:hover {
		color: #8B4513;
	}

	.pie-pagina .grupo-2 {
		background-color: #9c5420;
		padding: 15px 10px;
		text-align: center;
		color: #fff;
	}

	.pie-pagina .grupo-2 small {
		font-family: 'Akshar';
		font-size: 15px;
	}

	@media screen and (max-width: 820px) {
		.pie-pagina .grupo-1 {
			width: 90%;
			grid-template-columns: 1fr;
			grid-gap: 0px;
			padding: 35px 0px;
		}
	}
</style>
